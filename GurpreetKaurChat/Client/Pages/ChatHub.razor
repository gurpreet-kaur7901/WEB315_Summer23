@page "/chat"

@using Microsoft.AspNetCore.SignalR.Client
@inject NavigationManager NavigationManager
@implements IAsyncDisposable

<link href="css/ChatPage.css" rel="stylesheet" />

<div class="form-group">
    <label>
        Username:
        <input @bind="userInput" max="63" disabled="@(!IsConnected)"/>
    </label>
</div>
<div class="form-group">
    <label>
        Message:
        <input @bind="messageInput" size="50" disabled="@(!IsConnected)" @onclick="MessageInputClicked"/>
    </label>
</div>
<button @onclick="Send" disabled="@(!IsConnected)">Send</button>
<div class="typing-message" style="display: @typingMessageDisplay">@typingMessage</div>
<hr>

<ul id="messagesList">
    @foreach (var message in messages)
    {
        <li>@message</li>
    }
</ul>

@code {
    private HubConnection hubConnection;
    private List<string> messages = new List<string>();
    private string userInput;
    private string messageInput;
    private string typingMessage;
    private string typingMessageDisplay = "none"; 

    protected override async Task OnInitializedAsync()
    {
        hubConnection = new HubConnectionBuilder()
            .WithUrl(NavigationManager.ToAbsoluteUri("/chathub"))
            .Build();

        hubConnection.On<string, string>("ReceiveMessage", (user, message) =>
        {
            var encodedMsg = $"{user}: {message}";
            messages.Add(encodedMsg);
            StateHasChanged();
        });

        hubConnection.On<string>("UserTyping", (username) => //add registration handler for the "usertyping" event
        {
            typingMessage = $"{username} is typing a message...";
            typingMessageDisplay = "block";
            StateHasChanged();
        });

        hubConnection.On<string>("ReceiveAnonMessage", (messageValue) =>  //add registration handler for the "ReceiveAnonMessage" event
        {
            var encodedMsg = $"Anonymous: {messageValue}";
            messages.Add(encodedMsg);
            StateHasChanged();
        });

        await hubConnection.StartAsync();
    }

    async Task Send()
    {
        if (string.IsNullOrEmpty(userInput))
        {
            await hubConnection.SendAsync("SendAnonymousMessage", messageInput);
        }
        else
        {
            await hubConnection.SendAsync("SendMessage", userInput, messageInput);
        }
    }

    private async Task MessageInputClicked()
    {
        if (!string.IsNullOrEmpty(userInput))
        {
            await hubConnection.SendAsync("SendMessageToOthers", userInput, "is typing a message...");
        }
    }
    public bool IsConnected =>
        hubConnection.State == HubConnectionState.Connected;

    public async ValueTask DisposeAsync()
    {
        if (hubConnection is not null)
        {
            await hubConnection.DisposeAsync();
        }
    }
}